{
    "appenders":
    [
      {
        "type":"console",
        "category":"console"
      },
      {
        "category":"log_file",
        "type": "file",
        "filename": "file.log",
        "maxLogSize": 104800,
        "backups": 100
      },
      {
        "category":"log_date",
        "type": "dateFile",
        "filename": "date",
        "alwaysIncludePattern": true,
        "pattern": "-yyyy-MM-dd.log"
  
      }
    ],
    "replaceConsole": true,
    "levels":
    {
      "console":"ALL",
      "log_date":"ALL"
    }
  }